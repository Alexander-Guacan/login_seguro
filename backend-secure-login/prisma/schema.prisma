generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enum para roles de usuario
enum Role {
  ADMIN
  CLIENT
}

// Modelo principal de Usuario
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash bcrypt, nunca plain text
  firstName String
  lastName  String
  role      Role     @default(CLIENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  refreshTokens RefreshToken[]
  securityLogs  SecurityLog[]

  // Preferencias del usuario (para cliente)
  preferences Json? // Almacena preferencias no críticas como tema, idioma, etc.

  @@map("users")
}

// Tokens de refresco para rotación segura
model RefreshToken {
  id           String   @id @default(uuid())
  token        String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt    DateTime
  isRevoked    Boolean  @default(false)
  revokedAt    DateTime?
  createdAt    DateTime @default(now())
  ipAddress    String?  // Tracking de seguridad
  userAgent    String?  // Tracking de seguridad

  @@map("refresh_tokens")
  @@index([userId])
  @@index([token])
}

// Logs de seguridad (auditoría)
model SecurityLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String   // LOGIN_SUCCESS, LOGIN_FAILED, LOGOUT, PASSWORD_CHANGE, etc.
  ipAddress String
  userAgent String
  metadata  Json?    // Información adicional contextual
  createdAt DateTime @default(now())

  @@map("security_logs")
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}