generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enum para roles de usuario
enum Role {
  ADMIN
  CLIENT
}

// Modelo principal de Usuario
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hash bcrypt, nunca plain text
  firstName String
  lastName  String
  role      Role     @default(CLIENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  refreshTokens     RefreshToken[]
  securityLogs      SecurityLog[]
  authenticators    Authenticator[]  // Credenciales WebAuthn
  faceDescriptors   FaceDescriptor[] // Descriptores faciales

  // Preferencias del usuario (para cliente)
  preferences Json? // Almacena preferencias no críticas como tema, idioma, etc.

  @@map("users")
}

// Tokens de refresco para rotación segura
model RefreshToken {
  id           String   @id @default(uuid())
  token        String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt    DateTime
  isRevoked    Boolean  @default(false)
  revokedAt    DateTime?
  createdAt    DateTime @default(now())
  ipAddress    String?  // Tracking de seguridad
  userAgent    String?  // Tracking de seguridad

  @@map("refresh_tokens")
  @@index([userId])
  @@index([token])
}

// Logs de seguridad (auditoría)
model SecurityLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String   // LOGIN_SUCCESS, LOGIN_FAILED, LOGOUT, PASSWORD_CHANGE, etc.
  ipAddress String
  userAgent String
  metadata  Json?    // Información adicional contextual
  createdAt DateTime @default(now())

  @@map("security_logs")
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// Credenciales WebAuthn (para huella, Face ID, etc.)
model Authenticator {
  id                   String   @id @default(uuid())
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialID         String   @unique // ID de la credencial WebAuthn
  credentialPublicKey  Bytes    // Clave pública (no contiene datos biométricos)
  counter              BigInt   // Contador de uso para prevenir replay attacks
  credentialDeviceType String   // "singleDevice" o "multiDevice"
  credentialBackedUp   Boolean  // Si la credencial está respaldada en la nube
  transports           String[] // ["usb", "nfc", "ble", "internal"]
  deviceName           String?  // Nombre descriptivo del dispositivo
  createdAt            DateTime @default(now())
  lastUsedAt           DateTime @default(now())

  @@map("authenticators")
  @@index([userId])
  @@index([credentialID])
}

// Descriptores faciales (Face-API.js)
model FaceDescriptor {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  descriptor  String   // Descriptor facial encriptado (array de números)
  deviceInfo  String?  // Información del dispositivo donde se registró
  label       String?  // Etiqueta descriptiva (ej: "Mi laptop", "Oficina")
  createdAt   DateTime @default(now())
  lastUsedAt  DateTime @default(now())

  @@map("face_descriptors")
  @@index([userId])
}