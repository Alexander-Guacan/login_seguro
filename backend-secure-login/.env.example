# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL="postgresql://usuario:password@localhost:5432/secure_login_db?schema=public"

# ======================
# JWT SECRETS
# ======================
# IMPORTANTE: Cambiar estos valores en producción
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET="tu-super-secreto-access-token-aqui-cambiar-en-produccion"
JWT_REFRESH_SECRET="tu-super-secreto-refresh-token-aqui-cambiar-en-produccion"

# ======================
# JWT EXPIRATION
# ======================
JWT_ACCESS_EXPIRATION="15m"    # 15 minutos
JWT_REFRESH_EXPIRATION="7d"    # 7 días

# ======================
# APPLICATION CONFIG
# ======================
PORT=3001
NODE_ENV=development           # development | production
FRONTEND_URL="http://localhost:3000"

# ======================
# RATE LIMITING
# ======================
THROTTLE_TTL=60               # Tiempo en segundos
THROTTLE_LIMIT=10             # Número de requests por TTL